{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {{ include('default/navigation.html.twig') }}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="container col-md-6 col-sm-12 card text-center p-3 my-5">
        <h1 class="h3 mb-3 font-weight-normal">Inscription</h1>

        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.name) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.phoneNumber) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}
        <div class="btn-group w-100 my-3">
            <button type="submit" class="btn btn-primary">Inscription</button>
            <a href="{{ path('app_login') }}" class="btn btn-secondary">Connexion</a>
        </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
